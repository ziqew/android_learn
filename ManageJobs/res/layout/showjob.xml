<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/showjob"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    >

	<TextView	android:id="@+id/details"
	android:layout_height="fill_parent"
	android:layout_width="fill_parent"
	/>
	
	<Button android:id="@+id/mapjob"
	android:text="Map Job Location"
	android:layout_height="wrap_content"
	android:layout_width="fill_parent"
	/>
	
	<Button android:id="@+id/productinfo"
	android:text="Get Product Info"
	android:layout_height="wrap_content"
	android:layout_width="fill_parent"
	/>
	
	<Button android:id="@+id/closejob"
	android:text="Close Job"
	android:layout_height="wrap_content"
	android:layout_width="fill_parent"
	/>
	
	
	
</LinearLayout>	

